<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicalstructureapp.MainActivity">

    <TextView
        android:id="@+id/editText"
        style="@style/music_textview"
        android:text="@string/media_player"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        style="@style/music_textview"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:text="@string/metadata_explanation"
         />

    <ListView
        android:id="@+id/list_artist"
        style="@style/music_listview" />


</LinearLayout>
