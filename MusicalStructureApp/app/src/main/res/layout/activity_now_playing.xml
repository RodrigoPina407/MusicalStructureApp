<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.musicalstructureapp.NowPlaying">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/artist_text_id"
            style="@style/music_textview"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/album_text_id"
            style="@style/music_textview"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/song_text_id"
            style="@style/music_textview"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/textView"
            style="@style/music_textview"
            android:layout_margin="8dp"
            android:text="@string/album_picture" />

        <RadioButton
            style="@style/music_textview"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/shuffle"
            android:textSize="18sp" />

        <Button
            android:id="@+id/play_button"
            style="@style/music_textview"
            android:layout_margin="8dp"
            android:text="@string/play_button"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>